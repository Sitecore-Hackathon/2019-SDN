<?xml version="1.0" encoding="utf-8" ?>
<!-- https://github.com/Sitecore/Habitat/blob/ca6d9302fc5a0d4e583544df5d9ba0ff7b144dc7/src/Foundation/Serialization/code/App_Config/Include/Unicorn.Helix.config -->
<configuration xmlns:role="http://www.sitecore.net/xmlconfig/role/" xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore role:require="Standalone OR ContentManagement">
    <unicorn>
      <configurations>
        <!-- Base configuration for all modules -->
        <configuration name="Helix.Base" abstract="true" dependencies="Foundation.Data">
          <targetDataStore physicalRootPath="$(sourceFolder)\$(layer)\$(module)\serialization" />

          <predicate>
          </predicate>
        </configuration>

        <!-- Foundation modules -->
        <configuration name="Helix.Foundation" abstract="true" extends="Helix.Base">
          <predicate>
          </predicate>
        </configuration>

        <!-- Feature modules -->
        <configuration name="Helix.Feature" abstract="true" extends="Helix.Base">
          <predicate>
          </predicate>
        </configuration>

        <!-- Project modules -->
        <configuration name="Helix.Project" abstract="true" extends="Helix.Base">
          <predicate>
            <include name="$(layer).$(module).Layouts" database="master" path="/sitecore/layout/Layouts/$(layer)/$(module)" />
            <include name="$(layer).$(module).PlaceholderSettings" database="master" path="/sitecore/layout/Placeholder Settings/$(layer)/$(module)" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>